<div class="container">
  <nav class="clearfix">

    <% if admin_signed_in? || lawyer_signed_in? || user_signed_in?  %>
      <span><%=link_to home_about_path do%><p class="nav-img"></p><% end %></span>
    <% else %>
      <span><%=link_to root_path do%><p class="nav-img"></p><% end %></span>
    <% end %>

    <ul class="header-links">
      <!-----管理者ログイン後----->
      <% if admin_signed_in? %>
        <li class="header-link log-name">管理者がログイン中です</li>
        <li class="header-link"><%= link_to '先生一覧', admin_lawyers_path  %></li>
        <li class="header-link"><%= link_to '相談者一覧', admin_users_path  %></li>
        <li class="header-link"><%= link_to '相談一覧', troubles_path %></li>
        <li class="header-link"><%= link_to 'カテゴリー編集', admin_categories_path %></span></li>
        <li class="header-link"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
      <!-----先生ログイン後----->
      <% elsif lawyer_signed_in? %>
        <li class="header-link log-name"><%= current_lawyer.name %> 様としてログイン中</li>
        <li class="header-link"><%= link_to lawyer_path(current_lawyer) do %><span class="each_link"><i class="fas fa-user-tie"></i>マイページ</span><% end %></li>
        <li class="header-link"><%= link_to troubles_path do %><span class="each_link"><i class="far fa-list-alt"></i>相談一覧</span><% end %></li>
        <li class="header-link"><%= link_to rooms_path do %><span class="each_link"><i class="far fa-comments"></i>チャット一覧</span><% end %></li>
        <li class="header-link"><%= link_to destroy_lawyer_session_path, method: :delete do %><span class="each_link"><i class="fas fa-sign-out-alt"></i>ログアウト</span><% end %></li>
      <!-----利用者ログイン後----->
      <% elsif user_signed_in? %>
        <li class="header-link log-name"><%= current_user.nickname %> 様としてログイン中</li>
        <li class="header-link"><%= link_to user_path(current_user) do %><span class="each_link"><i class="fas fa-user"></i>マイページ</span><% end %></li>
        <li class="header-link"><%= link_to new_trouble_path do %><span class="each_link"><i class="fas fa-edit"></i>相談する</span><% end %></li>
        <li class="header-link"><%= link_to troubles_path do %><span class="each_link"><i class="far fa-list-alt"></i>相談一覧</span><% end %></li>
        <li class="header-link"><%= link_to destroy_user_session_path, method: :delete do %><span class="each_link"><i class="fas fa-sign-out-alt"></i>ログアウト</span><% end %></li>
      <!-----その他----->
      <% else %>
        <li class="header-link"><%= link_to home_about_path do %><span class="each_link"><i class="fas fa-check-square"></i>サイト説明</span><% end %></li>
        <li class="header-link"><%= link_to new_lawyer_session_path do %><span class="each_link"><i class="fas fa-user-tie"></i>先生ログイン</span><% end %></li>
        <li class="header-link"><%= link_to new_user_session_path do %><span class="each_link"><i class="fas fa-user"></i>相談者ログイン</span><% end %></li>
      <% end %>
    </ul>
  </nav>
</div>