<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-1">
      <h2><span class="subject">士業の先生として、新規登録する</span></h2>
    </div>

    <div class="col-xs-10 col-xs-offset-2">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :メールアドレス %> <span class="required">※必須</span><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %> <span class="required">※必須</span><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認 %>（もう一度入力）<span class="required">※必須</span><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :名前（姓・名） %> <span class="required">※必須</span>（姓・名の間に一文字スペースを入れてください）<br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name"%>
        </div>

        <div class="field">
          <%= f.label :名前（せい・めい） %> <span class="required">※必須</span>（せい・めいの間に一文字スペースを入れてください）<br />
          <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana"%>
        </div>

        <div class="field">
          <%= f.label :事務所の名前 %> <span class="required">※必須</span><br />
          <%= f.text_field :office, autofocus: true, autocomplete: "office"%>
        </div>

        <div class="field">
          <%= f.label :職業 %> <span class="required">※必須</span><br />
          <%= f.select :profession, Lawyer.professions, :prompt => "--選択--" %>
        </div>

        <div class="field">
          <%= f.label :性別 %> <span class="required">※必須（一度登録すると変更できませんので、よくご確認ください）</span><br />
          <%= f.select :sex,[["男性", "true"], ["女性", "false"]], :prompt => "選択" %>
        </div>

        <div class="field">
          <%= f.label :年齢 %> <span class="required">※必須</span><br />
          <%= f.select :age, Lawyer.ages, :prompt => "--選択--" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号 %>（ハイフン無しで数字のみ入力してください）<span class="required">※必須</span><br />
          <%= f.text_field :postal_code %>
        </div>

        <div class="field">
          <%= f.label :県 %> <span class="required">※必須</span><br />
          <%= f.select :prefecture, JpPrefecture::Prefecture.all %>
        </div>

        <div class="field">
          <%= f.label :市以下の住所 %> <span class="required">※必須</span><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"col-xs-5"%>
        </div></br>

        <div class="actions">
          <%= f.submit "登録する" %>
        </div>
      <% end %></br>

      <%= render "lawyers/shared/links" %>

    </div>
  </div>
</div>
