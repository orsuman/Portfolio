<% if trues.count == 0 %>
  <div class="col-xs-12 center">
    <h2>このユーザーの回答投稿は０件です</h2>
  </div>

<% else %>

  <h3 style="text-decoration: underline">回答件数 <%= trues.count %>件（"<span class="glyphicon glyphicon-thumbs-up"></span>参考になった"が<%= references %>件ついています）</h3></br>

  <div class="col-xs-10 col-xs-offset-1">
    <h4>ー<%= comments.count %>件を表示中ー（投稿の新しい順）</h4>
  </div><br/>

  <table ~~~ class = "table">

    <colgroup>
       <col style = "width:20%;">
       <col style = "width:80%;">
    </colgroup>

    <tr class= "tr-color">
  	<th class = "text-center">カテゴリー</th>
  	<th>タイトル</th>
    </tr>

  <% comments.each do |comment| %>
    <tr>
  	<td class = "text-center">
      <%= comment.trouble.category.name %>
  	</td>
  	<td>
      <%= link_to trouble_path(comment.trouble_id) do%>
        <%= comment.comment.truncate(40) %>
      <% end %>
  	</td>
    </tr>
  <%end%>

  </table>

  <div class = "col-xs-12 center"><br/>
    <%= paginate comments, class: "paginate" %>
  </div>

<% end %>

<div class="map">
  <div class="col-xs-12 center">
    <h3><span class="office_access"><i class="fas fa-building"></i>&nbsp;&nbsp;事務所へのアクセス&nbsp;&nbsp;<i class="fas fa-building"></i></span></h3>
  </div>
  <div id="map">
  </div>
    <script>
      function initMap() {
        var office = {lat: <%= lawyer.latitude %>, lng: <%= lawyer.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: office
        });
        var point = new google.maps.Marker({
          position: office,
          map: map
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['DB_MAP'] %>&callback=initMap" async defer></script>
</div>