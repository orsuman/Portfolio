<div class = "container">
  <div class = "row">

  	<div class="col-xs-3 col-xs-offset-1">
      <h2><span class = "subject">皆の相談一覧</span></h2></br>
    </div>


    <table ~~~ class = "table">

      <colgroup>
         <col style = "width:5%;">
         <col style = "width:20%;">
         <col style = "width:15%;">
         <col style = "width:30%;">
         <col style = "width:30%;">
      </colgroup>

	    <tr class= "info">
	      <th class = "text-center">写真</th>
	      <th class = "text-center">名前</th>
		  <th class = "text-center">カテゴリー</th>
		  <th class = "text-center">タイトル</th>
		  <th class = "text-center">内容</th>
	    </tr>
	  <% @troubles.each do |trouble| %>
	    <tr>
	      <td class = "text-center">
	      	<%= attachment_image_tag trouble.user, :image, :fill, 45, 45, size:'30x30' %>
	      </td>
	      <td class = "text-center">
	        <%= trouble.user.nickname %> 様
	      </td>
		  <td class = "text-center">
		  	<%= trouble.category.name %>
		  </td>
		  <td class = "text-center">
		    <%= link_to trouble_path(trouble) do %><%= trouble.title %><% end %>
		  </td>
		  <td>
            <%= trouble.body.truncate(20) %>
		  </td>
	    </tr>
	  <%end%>
    </table>

    </div>
  </div>
</div>
