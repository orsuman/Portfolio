<div class = "container">
  <div class = "row">

  	<div class="col-xs-3 col-xs-offset-1 actions">
      <h2><span class = "subject">皆の相談一覧</span></h2></br>
    </div>


    <table ~~~ class = "table">

      <colgroup>
         <col style = "width:7%;">
         <col style = "width:16%;">
         <col style = "width:17%;">
         <col style = "width:30%;">
         <col style = "width:30%;">
      </colgroup>

	    <tr class= "info">
	      <th></th>
	      <th>名前</th>
		  <th>カテゴリー</th>
		  <th>タイトル</th>
		  <th>内容</th>
	    </tr>
	  <% @troubles.each do |trouble| %>
	    <tr>
	      <td>
	      	<%= attachment_image_tag trouble.user, :image, :fill, 40, 40, fallback: "no_image.jpg",  size:'40x40' %>
	      </td>
	      <td>
	      	<% if lawyer_signed_in? || admin_signed_in? %>
	      	  <%= link_to user_path(trouble.user) do %><%= trouble.user.nickname %><% end %> 様
	      	<% else %>
	      	  <%= trouble.user.nickname %> 様
	      	<% end %>
	      </td>
		  <td>
		  	<%= trouble.category.name %>
		  </td>
		  <td>
		    <%= link_to trouble_path(trouble) do %><%= trouble.title %><% end %>
		  </td>
		  <td>
            <%= trouble.body.truncate(20) %>
		  </td>
	    </tr>
	  <%end%>
    </table>

    </div>
  </div>
</div>
