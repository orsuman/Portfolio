<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-2">
      <h2><span class="subject">ログイン画面</span></h2></br>
    </div>

    <div class="col-xs-4 col-xs-offset-3">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :メールアドレス, class:"col-xs-5" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-7" %>
        </div></br></br>

        <div class="field">
          <%= f.label :パスワード, class:"col-xs-5" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"col-xs-7" %>
        </div></br>

    </div>

        <div class="actions col-xs-8 col-xs-offset-3">
          <%= f.submit "ログインする", class:"btn btn-primary col-xs-6" %>
        </div>
      <% end %>

    </div>
  </div>
</div>