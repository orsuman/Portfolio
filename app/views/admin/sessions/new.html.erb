<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-2">
      <h2>ログイン画面</h2>
    </div>

    <div class="col-xs-10 col-xs-offset-3">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.text_field :id_name, autofocus: true, autocomplete: "id_name" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログインする" %>
        </div>
      <% end %>

    </div>
  </div>
</div>